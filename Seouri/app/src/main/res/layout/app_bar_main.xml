<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="sopt.seouri.MainActivity">


    <include layout="@layout/content_main" />
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#ffffff"
                app:elevation="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"></android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/toolbar_img"
                android:layout_width="84dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#37b0a6"
                android:textSize="22sp" />
            <ImageView
                android:id="@+id/toolbar_ddang"
                android:src="@drawable/pen"
                android:layout_marginRight="10dp"
                android:layout_marginTop="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/bar_search_layout"
                android:layout_width="279dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:background="@drawable/search_box"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/bar_search_text"
                    android:layout_width="236dp"
                    android:layout_height="27dp"
                    android:hint="기업명을 입력해 주세요."
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333333"
                    android:background="@null"
                    android:visibility="invisible"
                    android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/bar_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_button"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>



</RelativeLayout>
