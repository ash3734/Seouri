<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/griditem_rectangle_background"
    android:layout_width="165dp"
    android:layout_height="100dp"
    android:layout_marginRight="10dp">
    <TextView
        android:id="@+id/job_list_com"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="#333333"
        android:text="행복마을 협동조합"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/job_list_img"
        android:layout_below="@+id/job_list_com"
        android:src="@drawable/shoes"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_marginBottom="11dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="서울 종로구 북촌로"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp"
            android:id="@+id/job_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="월 130"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:layout_marginBottom="5dp"
            android:id="@+id/job_list_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="시간 협의"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:textSize="10sp"
            android:textColor="#333333"
            android:id="@+id/job_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
