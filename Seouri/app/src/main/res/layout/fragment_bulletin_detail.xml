<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sopt.seouri.community.BulletinDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginTop="?attr/actionBarSize"
                android:background="#D0EDEA"
                android:layout_width="match_parent"
                android:layout_height="3dp"></View>

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="2dp"
                    android:background="@drawable/profile_box"
                    android:id="@+id/qw"
                    android:src="@drawable/ppp"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/D_writer"
                    android:textColor="#333333"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    android:text="희망 마을 운영자"
                    android:layout_toRightOf="@+id/qw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:id="@+id/D_date"
                    android:text="17.08.18 07:45"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:textColor="#333333"
                android:textSize="16dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:text="희망마을  새로운 레터가 "
                android:id="@+id/D_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/D_cimage"
                android:layout_marginTop="15dp"
                android:src="@drawable/noimg"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#333333"
                android:textSize="18dp"
                android:text="댓글"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="1dp"
                android:id="@+id/D_more_reply"
                android:text="더보기"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_marginTop="10dp"
            android:background="#95989A"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"></View>

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textColor="#333333"
                android:id="@+id/D_reply_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16dp"
                android:textColor="#333333"
                android:id="@+id/D_reply_content"
                android:layout_toRightOf="@+id/D_reply_writer"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
