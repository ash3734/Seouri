<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    tools:context="sopt.seouri.LoginActivity">

    <RelativeLayout
        android:padding="10dp"
        android:background="@drawable/griditem_rectangle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/b_profile"
            android:src="@drawable/ppp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_below="@+id/b_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/b_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/b_writer"
                android:text="희망 마을 운영자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/b_title"
                android:layout_below="@+id/B_writer"
                android:text="희망 마을 8월 래터"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/b_date"
            android:layout_alignParentRight="true"
            android:text="17. 08. 18 07:45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/b_profile"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="조회수 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="37"
                android:id="@+id/b_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
