<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sopt.seouri.community.BulletinDetailMoreReplyFragment">

    <View
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#D0EDEA"
        android:layout_width="match_parent"
        android:layout_height="3dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="1dp"
                    android:background="@drawable/profile_box"
                    android:id="@+id/DR_proimg"
                    android:src="@drawable/ppp"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:id="@+id/DR_writer"
                    android:layout_marginLeft="15dp"
                    android:text="희망 마을 운영자"
                    android:layout_toRightOf="@+id/DR_proimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:alpha="0.5"
                android:background="#95989A" />
            <ListView
                android:divider="#ffffff"
                android:dividerHeight="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/reply_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:textColor="#333333"
                android:layout_marginLeft="15dp"
                android:textSize="18dp"
                android:id="@+id/sd"
                android:text="댓글 쓰기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_below="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="#FFA500" />
            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/R_add_reply_edit"
                    android:layout_marginTop="14dp"
                    android:hint=" 내용을 입력하세요"
                    android:background="@null"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/R_add_reply_img"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/send"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
