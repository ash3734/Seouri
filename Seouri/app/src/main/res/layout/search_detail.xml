<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/search_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업 이름"
                android:textSize="20sp"
                android:layout_margin="15dp"/>

            <ImageView
                android:id="@+id/search_detail_coupon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_menu_camera"/>
            <TextView
                android:id="@+id/search_detail_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업에 대한 소개"
                android:layout_margin="15dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_detail_recycler_picture"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업 소식"
                android:layout_margin="15dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/search_detail_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업에대한 소식"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_menu_send"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_menu_send"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_menu_send"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="홈페이지 주소"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="전화번호"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="위치"
                        android:gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>