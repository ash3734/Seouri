<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search_detail_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/search_detail_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업에 대한 소개"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_margin="15dp"
                android:lineSpacingExtra="7sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_detail_recycler_picture"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_height="140dp"
                android:orientation="horizontal">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f5f5f5"/>
            <TextView
                android:id="@+id/search_detail_news_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마을기업 소식"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="#333333"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/search_detail_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7sp"
                android:textSize="14sp"
                android:textColor="#cc333333"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@drawable/web_icon"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@drawable/call_icon"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@drawable/address_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/search_detail_homepage"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="홈페이지 주소"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/search_detail_phone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="전화번호"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/search_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="위치"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/map_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:name="com.google.android.gms.maps.MapFragment"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/search_detail_coupon"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_menu_camera"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>