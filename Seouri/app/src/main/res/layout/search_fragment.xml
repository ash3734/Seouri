<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="sopt.seouri.search.SearchFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="위치를 설정해 주세요"
        android:textColor="#919797"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#e9f6f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/griditem_rectangle_background">
        <TextView
            android:id="@+id/search_all_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="서울시 전체"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <GridView
                    android:id="@+id/search_location_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:verticalSpacing="12dp"
                    android:horizontalSpacing="30dp"
                    >
                </GridView>
        </LinearLayout>
</LinearLayout>